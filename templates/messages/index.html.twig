{% extends 'base.html.twig' %}

{% block body %}
    <div align="center" class="container">
        <h1>Messages list</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Text</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                {% for message in messages %}

                        <tr>
                            <td><a href="{{ path('messages_show', { 'id': message.id }) }}">{{ message.id }}</a></td>
                            <td>{{ message.text }}</td>
                            <td>
                                <ul>
                                    <!--<li>
                                        <a href="{{ path('messages_edit', { 'id': message.id }) }}">edit</a>
                                    </li>-->
                                    <li>
                                        <a href="{{ path('messages_response', { 'id': message.id })}}">Repondre</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>

                {% endfor %}
                </tbody>
            </table>
        <ul>
            <li>
                <a href="{{ path('messages_new', { 'id': 0 }) }}">Create a new message</a>
            </li>
        </ul>
    </div>
{% endblock %}
